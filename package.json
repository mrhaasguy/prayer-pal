    "@types/pg": "^8.6.1",
    "@types/uuid": "^8.3.1",
    "amqplib": "^0.8.0",
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "html-to-text": "^8.1.0",
    "mail-listener2": "^0.3.1",
    "nodemailer": "^6.6.3",
    "parse-full-name": "^1.2.6",
    "pg": "^8.6.0",
    "raygun": "^0.13.1",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "uuid": "^8.3.2"
  },
  "repository": {
    "type": "git",
